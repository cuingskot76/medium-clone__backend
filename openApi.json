{
  "openapi": "3.0.0",
  "info": {
    "title": "Medium Clone Blog API",
    "description": "RESTful API for Medium Clone",
    "contact": {
      "email": "afrizapamujo@gmail.com",
      "name": "Afrizal Setya Pamuji",
      "url": "https://afrzl.vercel.app/"
    },
    "license": {
      "name": "MIT License",
      "url": "https://mit-license.org/"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://{environment}.mediumclone.afrizal.com/api/v1",
      "variables": {
        "environment": {
          "default": "dev",
          "description": "Server Environment",
          "enum": ["dev", "staging", "production"]
        }
      }
    }
  ],
  "tags": [
    {
      "name": "blog"
    }
  ],
  "paths": {
    "/blogs": {
      "get": {
        "tags": ["blog"],
        "summary": "Get all blogs",
        "description": "Get all active blogs by default",
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "description": "Limit blog per page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {}
      }
    },

    "/blogs/trending": {
      "get": {
        "tags": ["blog"],
        "summary": "Get trending blogs",
        "description": "Get all trending blogs",
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "description": "Limit blog per page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 6
            }
          }
        ]
      }
    },

    "/blogs/tag": {
      "get": {
        "tags": ["blog"],
        "summary": "Get blogs by tag",
        "description": "Get all blogs by tag",
        "parameters": [
          {
            "in": "query",
            "name": "tag",
            "description": "Get blog by tag",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "limit",
            "description": "Limit blog per page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ]
      }
    },

    "/blog": {
      "post": {
        "tags": ["blog"],
        "summary": "Create a blog",
        "description": "Create a blog",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "programming": {
                  "description": "Example blog with programming title",
                  "value": {
                    "title": "How to learn programming",
                    "content": "Lorem ipsum",
                    "tags": ["programming", "javascript", "nodejs"]
                  }
                },
                "design": {
                  "description": "Example blog with design title",
                  "value": {
                    "title": "How to learn design",
                    "content": "Lorem ipsum"
                  }
                }
              }
            }
          }
        }
      }
    },

    "/blog/{blogId}": {
      "get": {
        "tags": ["blog"],
        "summary": "Get a blog",
        "description": "Get a blog by id"
      },
      "put": {
        "tags": ["blog"],
        "summary": "Update a blog",
        "description": "Update a blog by id",
        "parameters": [
          {
            "in": "path",
            "name": "blogId",
            "description": "Blog id to updated",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "content": {
                    "type": "string"
                  }
                },
                "example": {
                  "title": "How to learn programming",
                  "content": "Lorem ipsum"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["blog"],
        "summary": "Delete a blog",
        "description": "Delete a blog by id",
        "parameters": [
          {
            "in": "path",
            "name": "blogId",
            "description": "Blog id to deleted",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },

    "/blog/search": {
      "get": {
        "tags": ["blog"],
        "summary": "Search blogs",
        "description": "Search blogs by title",
        "parameters": [
          {
            "in": "query",
            "name": "title",
            "description": "Search blog by title",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "limit",
            "description": "Limit blog per page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            },
            "examples": {
              "programming": {
                "description": "Example blog with programming title",
                "value": "How to learn programming"
              }
            }
          }
        ]
      }
    }
  }
}
