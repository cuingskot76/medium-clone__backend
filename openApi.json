  "paths": {
    "/blogs": {
      "get": {
        "tags": ["blog"],
        "summary": "Get all blogs",
        "description": "Get all active blogs by default",
        "parameters": [
          {
            "in": "query",
            "name": "limit",
            "description": "Limit blog per page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success get all blogs",
            "content": {
              "application/json": {
                "schema": {},
                "examples": {
                  "success": {
                    "description": "Example response success get all blogs",
                    "value": [
                      {
                        "id": "cjkl2j3k",
                        "title": "How to learn programming",
                        "content": "Lorem ipsum",
                        "tags": ["programming", "javascript", "nodejs"],
                        "userId": "1",
                        "views": "5"
                      },
                      {
                        "id": "bwn3oih",
                        "title": "How to learn design",
                        "content": "Lorem ipsum",
                        "userId": "2",
                        "views": "3"
                      }
                    ]
                  }
                }
              }
            }
          },
          "404": {
            "description": "Blog not found",
            "content": {
              "application/json": {
                "schema": {},
                "examples": {
                  "notFound": {
                    "description": "Example response blog not found",
                    "value": {
                      "message": "Blog not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

